<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="CeliaPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:CeliaPlus"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="小艺+"
        mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView x:Name="NavView"
                        ItemInvoked="NavigationView_ItemInvoked"
                        Loaded="NavigationView_Loaded"
                        Style="{StaticResource NavigationViewStoreStyle}">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="小艺" Tag="Celia">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/Celia.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="DeepSeek" Tag="DeepSeek">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/DeepSeek.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Copilot" Tag="Copilot"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/Copilot.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Gemini" Tag="Gemini"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/Gemini.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Google AI Studio" Tag="GoogleAIStudio"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="{ThemeResource GoogleAIStudioImage}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="ChatGPT" Tag="ChatGPT"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="{ThemeResource ChatGPTImage}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Grok" Tag="Grok"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="{ThemeResource GrokImage}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="豆包" Tag="DouBao">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/DouBao.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Kimi" Tag="Kimi">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="{ThemeResource KimiImage}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="通义千问" Tag="Qwen">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/Qwen.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Claude" Tag="Claude"
                                    Visibility="{x:Bind IsHiddenItemsVisible, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Height="25"
                                   Margin="-5"
                                   Source="/Assets/AI/Claude.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem IsEnabled="False" SelectsOnInvoked="False"/>
                <NavigationViewItem Content="设置" Tag="Settings">
                    <NavigationViewItem.Icon>
                        <AnimatedIcon>
                            <AnimatedIcon.Source>
                                <animatedvisuals:AnimatedSettingsVisualSource/>
                            </AnimatedIcon.Source>
                        </AnimatedIcon>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <Grid>
                <Frame x:Name="NavFrame"/>
                <ProgressRing Width="70" Height="70"
                              Canvas.ZIndex="2"
                              IsActive="{x:Bind IsProgressRingActive, Mode=OneWay}"/>
            </Grid>
            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent"/>
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent"/>
                <x:Double x:Key="NavigationViewContentMargin">0</x:Double>
                <x:Double x:Key="NavigationViewContentGridCornerRadius">0</x:Double>
            </NavigationView.Resources>
        </NavigationView>
    </Grid>
</Window>
